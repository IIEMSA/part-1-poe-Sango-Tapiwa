@model EventEase.Models.Bookings

@{
    ViewData["Title"] = "Edit Booking";
}

<h1>Edit Booking</h1>

<h4>Booking Information</h4>
<hr />

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="EventId" class="control-label"></label>
        <select asp-for="EventId" class="form-control" asp-items="@(new SelectList(ViewBag.Events, "Id", "Name"))"></select>
        <span asp-validation-for="EventId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="VenueId" class="control-label"></label>
        <select asp-for="VenueId" class="form-control" asp-items="@(new SelectList(ViewBag.Venues, "Id", "Name"))"></select>
        <span asp-validation-for="VenueId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BookingDate" class="control-label"></label>
        <input asp-for="BookingDate" class="form-control" type="date" />
        <span asp-validation-for="BookingDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
